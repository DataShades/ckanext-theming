{
    "exclude": ["node_modules"],
    "include": [
        "assets/*.ts"
    ],
    "compilerOptions": {
        "module": "preserve",
        "target": "es2020",
        "types": [],

        "sourceMap": false,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "skipLibCheck": false
    }
}
